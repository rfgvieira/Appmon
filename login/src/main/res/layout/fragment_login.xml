<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/xnormal"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edt_userlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/normal"
        android:hint="@string/usuario"
        android:background="@drawable/roundedelement"
        android:padding="@dimen/margintiny"
        android:gravity="center"
        android:fontFamily="@font/courier_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/edt_senhalogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/normal"
        android:hint="@string/senha"
        android:background="@drawable/roundedelement"
        android:padding="@dimen/margintiny"
        android:gravity="center"
        android:layout_marginTop="@dimen/small"
        android:fontFamily="@font/courier_bold"
        app:layout_constraintTop_toBottomOf="@id/edt_userlogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_esqueci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/esqsenha"
        android:textSize="@dimen/txt_small"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:layout_marginTop="@dimen/margintiny"
        android:fontFamily="@font/courier_bold"
        app:layout_constraintTop_toBottomOf="@id/edt_senhalogin"
        app:layout_constraintEnd_toEndOf="@id/edt_senhalogin"/>

    <TextView
        android:id="@+id/tv_errologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/errologin"
        android:textSize="@dimen/txt_xnormal"
        android:textColor="@color/red"
        android:layout_marginTop="@dimen/margintiny"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_esqueci"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_entrarlogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/entrar"
        android:padding="@dimen/margintiny"
        android:textColor="@color/white"
        android:layout_marginHorizontal="@dimen/normal"
        android:layout_marginBottom="@dimen/normal"
        android:textSize="@dimen/txt_normal"
        android:background="@drawable/roundedelementred"
        android:fontFamily="@font/courier_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_criarconta"/>

    <include
        android:id="@+id/btn_criarconta"
        layout="@layout/create_account_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="@dimen/normal"
        android:layout_marginBottom="@dimen/marginnormal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_powered"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"/>

    <TextView
        android:id="@+id/tv_powered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/powered"
        android:elevation="@dimen/large"
        android:fontFamily="@font/courier_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>