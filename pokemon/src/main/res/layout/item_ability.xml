<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margintiny"
    android:paddingVertical="@dimen/margintiny"
    android:paddingBottom="@dimen/marginlarge"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_pokemon_card">

    <TextView
        android:id="@+id/title_ability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_large"
        android:textStyle="bold"
        tools:text="Thunderbolt"
        android:fontFamily="@font/cour"
        android:layout_marginVertical="@dimen/marginsmall"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="@dimen/margintiny"
        app:layout_constraintTop_toBottomOf="@id/title_ability"/>

    <TextView
        android:id="@+id/ability_desc"
        android:layout_width="@dimen/imgbig"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/margintiny"
        android:layout_marginVertical="@dimen/margintiny"
        android:fontFamily="@font/roboto_regular"
        tools:text="When this Pokémon has 1/3 or less of its HP remaining, its grass-type moves inflict 1.5× as much regular damage."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"/>


</androidx.constraintlayout.widget.ConstraintLayout>